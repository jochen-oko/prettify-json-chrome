{
  "manifest_version": 2,

  "name": "Json prettyprinter",
  "description": "Prettyprints a selection of json",
  "version": "0.1",
  "author":"jochen-oko",

  "background": {
  	"scripts": ["background.js"],
  	"persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "{PrettyPrinter}"
  },

  "permissions" : [
	  "tabs","declarativeContent", "http://*/*",  "https://*/*"
  ]
}
